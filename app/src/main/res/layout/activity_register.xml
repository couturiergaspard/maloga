<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_register"
    android:background="@color/theme1"
    tools:context=".connexion.Login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15"
                app:srcCompat="@mipmap/maloga_logo_foreground" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nom_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#ffff">

                <EditText
                    android:id="@+id/login_nom"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#8ebcf5"
                    android:drawableLeft="@drawable/ic_action_id"
                    android:ems="10"
                    android:hint="Nom"
                    android:inputType="text"
                    android:scrollbarThumbHorizontal="@color/colorText1"
                    android:scrollbarThumbVertical="@color/colorText1"
                    android:singleLine="false"
                    android:textColor="#ffff"
                    android:textColorHint="@color/colorText1" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/prenom_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#ffff">

                <EditText
                    android:id="@+id/login_prenom"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#8ebcf5"
                    android:drawableLeft="@drawable/ic_action_id"
                    android:ems="10"
                    android:hint="PrÃ©nom"
                    android:inputType="text"
                    android:scrollbarThumbHorizontal="@color/colorText1"
                    android:scrollbarThumbVertical="@color/colorText1"
                    android:singleLine="false"
                    android:textColor="#ffff"
                    android:textColorHint="@color/colorText1" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/postal_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#ffff">

                <EditText
                    android:id="@+id/login_postal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#8ebcf5"
                    android:drawableLeft="@drawable/ic_postal"
                    android:ems="10"
                    android:hint="Code postal"
                    android:inputType="number"
                    android:scrollbarThumbHorizontal="@color/colorText1"
                    android:scrollbarThumbVertical="@color/colorText1"
                    android:singleLine="false"
                    android:textColor="#ffff"
                    android:textColorHint="@color/colorText1" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#ffff">

                <EditText
                    android:id="@+id/login_email"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#8ebcf5"
                    android:drawableLeft="@drawable/ic_action_email"
                    android:ems="10"
                    android:hint="Adresse mail"
                    android:inputType="textEmailAddress"
                    android:scrollbarThumbHorizontal="@color/colorText1"
                    android:scrollbarThumbVertical="@color/colorText1"
                    android:singleLine="false"
                    android:textColor="#ffff"
                    android:textColorHint="@color/colorText1" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/motdepasse_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#ffff">

                <EditText
                    android:id="@+id/login_motdepasse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#8ebcf5"
                    android:drawableLeft="@drawable/ic_action_lock"
                    android:ems="10"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:scrollbarThumbHorizontal="@color/colorText1"
                    android:scrollbarThumbVertical="@color/colorText1"
                    android:textColor="#ffff"
                    android:textColorHint="@color/colorText1" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/motdepasse2_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#ffff">

                <EditText
                    android:id="@+id/login_motdepasse2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#8ebcf5"
                    android:drawableLeft="@drawable/ic_action_lock"
                    android:ems="10"
                    android:hint="Ressaisir le mot de passe"
                    android:inputType="textPassword"
                    android:scrollbarThumbHorizontal="@color/colorText1"
                    android:scrollbarThumbVertical="@color/colorText1"
                    android:textColor="#ffff"
                    android:textColorHint="@color/colorText1" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/voiture_input"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#ffff">

                <EditText
                    android:id="@+id/voiture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#8ebcf5"
                    android:ems="10"
                    android:hint="Marque de la voiture"
                    android:drawableLeft="@drawable/ic_car"
                    android:inputType="textPersonName"
                    android:scrollbarThumbHorizontal="@color/colorText1"
                    android:scrollbarThumbVertical="@color/colorText1"
                    android:textColor="#ffff"
                    android:textColorHint="@color/colorText1" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/login_id"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/log_in" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>