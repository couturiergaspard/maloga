<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme1"
    android:layout_width="match_parent"
    android:id="@+id/activity_parametre"
    android:layout_height="match_parent"
    tools:context=".volant.Volant">

    <Button
        android:id="@+id/carnet"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/carnet"
        android:fadeScrollbars="false"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/volant"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/volant"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/new_volant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/volant" />

    <Button
        android:id="@+id/parametre"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/parametre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/volant"
        app:srcCompat="@drawable/parametre" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/parametre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch_s"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Mode nuit"
                android:textAppearance="@style/Text_Medium"
                android:textColor="@color/colorText1" />

            <Button
                android:id="@+id/infotrajet"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/transparent"
                android:text="Information sur les trajets"
                android:textAppearance="@style/Text_Medium"
                android:textColor="@color/colorText1" />

            <Button
                android:id="@+id/compte"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/transparent"
                android:text="Information du compte"
                android:textAppearance="@style/Text_Medium"
                android:textColor="@color/colorText1" />

            <Button
                android:id="@+id/notif"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/transparent"
                android:text="Notification"
                android:textAppearance="@style/Text_Medium"
                android:textColor="@color/colorText1" />

            <Button
                android:id="@+id/apropos"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/transparent"
                android:text="À propos"
                android:textAppearance="@style/Text_Medium"
                android:textColor="@color/colorText1" />

            <Button
                android:id="@+id/aide"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/transparent"
                android:text="Aide"
                android:textAppearance="@style/Text_Medium"
                android:textColor="@color/colorText1" />

            <Button
                android:id="@+id/contact"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/transparent"
                android:text="Nous contacter"
                android:textAppearance="@style/Text_Medium"
                android:textColor="@color/colorText1" />

            <Button
                android:id="@+id/deconnexion"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@color/transparent"
                android:text="Se déconnecter"
                android:textAppearance="@style/Text_Medium"
                android:textColor="#FF0000" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>